doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title MNU Study Room
        <!--link(rel="stylesheet", href="https://unpkg.com/mvp.css") -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Gothic+A1:wght@600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    body(style={"font-family":'Gothic A1', "font-size":"25px", color:"#FFFFFF", margin:"0", "background-image":"url('https://cdn.pixabay.com/photo/2020/09/20/03/49/board-5585922_1280.png')", height:"100vh", width:"100vw", "background-size":"cover", "background-repeat":"no-repeat"})
        header
            a(href="home.pug")
                i(class="fas fa-home fa-lg", style={margin:"25px", color:"green"})
            h1(style={"text-align":"center", "margin-top": "90px", "letter-spacing": "10px", color:"white", "-webkit-text-stroke":"2px black"}) MNU  Study  Room <br />
        main
            div#welcome(style={"text-align":"center", margin:"20px 0"})
                form(style={display:"flex", "justify-content":"center", margin:"20px"})
                    div
                        div(style={margin:"10px"})
                            label 방 이름을 입력해주세요 (*)<br />
                                input(placeholder="room name", required, type="text", style={width:"200px", height:"50px", border:"3px solid Black", "border-radius":"5px", "margin-top": "10px", "font-size":"15px", "text-align":"center"})
                                br
                        div(style={margin:"30px"})
                            label 방 소개를 해주세요 <br />
                                input(placeholder="room introduction", type="text", style={width:"200px", height:"100px", border:"3px solid Black", "border-radius":"5px", "margin-top": "10px", "font-size":"15px", "text-align":"center"})
                                br
                        div(style={margin:"30px"})
                            label 방 참여자를 선택해주세요 (*) <br />
                                select(style={width:"200px", height:"50px", border:"3px solid Black", "border-radius":"5px", "margin-top": "10px", "font-size":"20px", "font-weight":"bold", "text-align":"center"}) Participant
                                    option(style={"font-size":"20px", "font-weight":"bold"}) 1
                                    option(style={"font-size":"20px", "font-weight":"bold"}) 2
                                    option(style={"font-size":"20px", "font-weight":"bold"}) 3
                                    option(style={"font-size":"20px", "font-weight":"bold"}) 4
                        div(style={margin:"30px"})
                            label 비밀번호 <br />
                                input(placeholder="room password", type="text", style={width:"200px", height:"50px", border:"3px solid Black", "border-radius":"5px", "margin-top": "10px", "font-size":"15px", "text-align":"center"})
                                br
                        div#nickName(style={margin:"30px"})
                            label 닉네임 (*) <br />
                                input(placeholder="nickname", required, type="text", id="name", style={width:"200px", height:"50px", border:"3px solid Black", "border-radius":"5px", "font-size":"15px", "text-align":"center"})
                        Button(style={width:"150px", height:"50px",margin:"10px", "border-radius":"5px", padding:"5px", "font-size":"20px", "font-weight":"bold"}) 방 생성/입장
                        Button(type="reset", style={width:"150px", height:"50px", margin:"10px", "border-radius":"5px", padding:"5px", "font-size":"20px", "font-weight":"bold"}) 삭제
            div#call(style={margin:"0"})
                div#myStream
                    fieldset#selectOptions(style="display:none")
                        legend Advanced options
                        select#displaySurface
                            option(value="default") Show default sharing options
                            option(value="browser") Prefer to share a browser tab
                            option(value="window") Prefer to share a window
                            option(value="monitor") Prefer to share an entire screen
                    div#errorMsg
                    br
                    div#container(style={display:"flex", width:"100vw", height:"80vh"})
                        div#screen(style={display:"grid", flex:"3", "grid-template-columns":"repeat(2, 1fr)", "grid-template-rows":"repeat(2, 2fr)", "grid-gap":"10px"})
                            div#myScreen(style={display:"none", position:"relative", overflow:"hidden", border:"3px solid black", "text-align":"center"})
                                legend My Screen Box
                                video#myFace(autoplay, playsinline, width="400", height="350")
                                br
                                button#startButton(disabled, style={width:"150px", height:"50px", "background-color":"#FFFFFF", color:"black", "border-radius":"5px", padding:"5px", "font-size" : "12px"}) Start
                                button#mute(style={width:"150px", height:"50px", "background-color":"##FFFFFF", color:"black", "border-radius":"5px", padding:"5px", "font-size" : "12px"}) Mute
                                button#camera(style={width:"150px", height:"50px", "background-color":"##FFFFFF", color:"black", "border-radius":"5px", padding:"5px", "font-size" : "12px"}) Turn Camera Off            
                            div#peerScreen(style={display:"none", position:"relative", overflow:"hidden", border:"3px solid black", "text-align":"center"})
                                legend Peer Screen Box 1
                                video#peerFace(autoplay, playsinline, control, width="400", height="350")
                            div#peerScreen2(style={display:"none", position:"relative", overflow:"hidden", border:"3px solid black", "text-align":"center"})
                                legend Peer Screen Box 2
                                video#peerFace2(autoplay, playsinline, control, width="400", height="350")
                            div#peerScreen3(style={display:"none", position:"relative", overflow:"hidden", border:"3px solid black", "text-align":"center"})
                                legend Peer Screen Box 3
                                video#peerFace3(autoplay, playsinline, control, width="400", height="350")
                        div#chat-container(style={flex:"1", display:"flex", "flex-direction":"column", "background-color":"#f1f1f1", border:"3px solid black"})
                            div#chatView(style={height:"95%", "overflow-y":"scroll", display:"flex", "flex-direction":"column-reverse"})
                                div(style={flex:"1"})
                                    ul
                            div(style={height:"5%", "border-top":"3px solid black", "text-align":"center"})
                                form#chatForm(onsubmit="return false", style={"justify-content": "center", display:"flex"})
                                    input(type="text" id="msg" style={width:"80%", height:"35px", "border-radius":"8px"})
                                    input(type="submit" id="send" value="전송" style={width:"16%", height:"40px", "border-radius":"50px", background:"black", color:"white"})
        script(src="/socket.io/socket.io.js")
        script(src="https://webrtc.github.io/adapter/adapter-latest.js")
        script(src="/public/js/app.js")