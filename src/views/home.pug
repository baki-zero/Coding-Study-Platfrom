doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Zoom Clone
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header
            h1 Mnu Study
        main
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    Button Enter Room
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400")    //playsinline은 모바일 브라우저가 필요로 하는 property
                    button#mute Mute
                    button#camera Turn Camera Off
                    select#cameras
                        //option(value="device") Face Camera
                    
                    video#peerFace(autoplay, playsinline, control, width="400", height="400")
                    
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")